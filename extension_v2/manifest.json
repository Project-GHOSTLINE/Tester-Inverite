{
  "manifest_version": 3,
  "name": "Inverite Rapport Simple",
  "version": "9.0.0",
  "description": "Extension Inverite - Generation de rapports simples",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://inverite.com/*",
    "*://*.inverite.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://inverite.com/*",
        "*://*.inverite.com/*"
      ],
      "js": ["config.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
